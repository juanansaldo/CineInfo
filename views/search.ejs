<%- include("partials/header.ejs") %>

  <header>
    <h1 class="com-title"> Search for a movie </h1>
    <nav class="mod">
      <a class="com-nav" href="/home"> Home </a>
      <a class="com-nav" href="/addMovie"> Add a movie </a>
      <a class="com-nav" href="/addActor"> Add an actor </a>
      <a class="com-nav" href="/movies"> All Movies </a>
      <a class="com-nav" href="/actors"> All Actors </a>
      <a class="com-nav" href="/search"> Search </a>
      <a class="com-nav" href="/logout"> Logout </a>
    </nav>
    <br>
  </header>

  <form method = "GET"  action = "/searchByTitle" class="mod" style="padding-top:24px">

    <span class="user-form-label"> Title: </span>
    <input  type ="text" name = "title" class="width162">

    <button class="width130 ml16"> Search by Title </button>
    
  </form>


  <form method = "GET"  action = "/searchByActor" class="mod mt10">
    
      <span class="user-form-label">Actor:</span>
        <select name = "actorId" class="width162" style="height:26px">

        <% for(i = 0; i < names.length; i++) { %>
          <option value="<%= names[i].actorId %>" > <%= names[i].name %> </option>
        <% } %>
          
        </select> 

        <button class="width130 ml16"> Search by Actor </button>
    </form>

    <form method = "GET"  action = "/searchByRating" class="mod mt10">
    
      <span class="user-form-label">Rating:</span>
        <% for(i = 0; i < rate.length; i++) { %>
          <input type ="radio" name = "rating" value= "<%= rate[i].rated %>" > <%= rate[i].rated %> </input> 
        <% } %>

        <button class="width130 ml16"> Search by Rating </button>
    </form>
<%- include("partials/footer.ejs") %>
</body>
</html>