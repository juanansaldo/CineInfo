<%- include("partials/header.ejs") %>

<body>
  <header>
    <h1 class="com-title"> Actors </h1>
    <nav class="mod">
      <a class="com-nav" href="/home"> Home </a>
      <a class="com-nav" href="/addMovie"> Add a movie </a>
      <a class="com-nav" href="/addActor"> Add an actor </a>
      <a class="com-nav" href="/movies"> All Movies </a>
      <a class="com-nav" href="/actors"> All Actors </a>
      <a class="com-nav" href="/search"> Search </a>
      <a class="com-nav" href="/logout"> Logout </a>
    </nav>
    <br>
  </header>

  <div class="act">

    <% for (i = 0; i < actors.length; i++) { %>
      <div class="com-item"> 
        <a href="/updateActor?id=<%= actors[i].actorId %>"> Update </a>
        <a href="/deleteActor?id=<%= actors[i].actorId %>"> Delete </a>        
        <br>
        <img src="<%= actors[i].portrait %>" width = "160px"> <br>
        <a class="com-text card-text" href="#" id = "<%= actors[i].actorId %>"> <%= actors[i].name %> </a>
      </div>
    <% } %>
  </div>

  <!-- Actor Modal -->
  <div class="modal fade" id="actorModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel"> Actor Info </h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="mod" id = "actorName"> </div>
          <div class="mod" id = "actorAge"> </div>
          <div class="mod" id = "actorPicture"> </div>
          <div id="actorAbout"> </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
  
  <script src="/js/script.js"></script>
    
  <%- include("partials/footer.ejs") %>
</body>
</html>